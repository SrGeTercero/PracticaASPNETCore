@*
@model List<ObjetoEscuelaBase>*@

<table class="table table-dark table-hover">
    <thead>
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Id</th>
            <!--<th scope="col">Jornada</th>
            <th scope="col">Direccion</th>-->
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.Nombre</td>
                <td>@obj.Id</td>
                @{
                    if (obj is Curso)
                    {
                        <td>@Html.ActionLink("Actualizar", "Update", "Curso", new{Id = obj.Id, Nombre = obj.Nombre, Jornada = obj.Jornada, Direccion = obj.Direccion}, new{@class="btn btn-warning"})</td>
                        <td>@Html.ActionLink("Eliminar", "Delete", "Curso", new{Id = obj.Id, Nombre = obj.Nombre, Jornada = obj.Jornada, Direccion = obj.Direccion}, new{@class="btn btn-danger"})</td>
                    }
                    else if(obj is Alumno)
                    {
                        <td>@Html.ActionLink("Actualizar", "Update", "Alumno", new{Id = obj.Id, Nombre = obj.Nombre, CursoId = obj.CursoId}, new{@class="btn btn-warning"})</td>
                        <td>@Html.ActionLink("Eliminar", "Delete", "Alumno", new{Id = obj.Id, Nombre = obj.Nombre, CursoId = obj.CursoId}, new{@class="btn btn-danger"})</td>
                    }
                    else if(obj is Asignatura)
                    {
                        <td>@Html.ActionLink("Actualizar", "Update", "Asignatura", new{Id = obj.Id, Nombre = obj.Nombre, CursoId = obj.CursoId}, new{@class="btn btn-warning"})</td>
                        <td>@Html.ActionLink("Eliminar", "Delete", "Asignatura", new{Id = obj.Id, Nombre = obj.Nombre, CursoId = obj.CursoId}, new{@class="btn btn-danger"})</td>
                    }
                    else
                    {
                        <td>Actualizar</td>
                        <td>Eliminar</td>
                    }
                }
                
            </tr>
        }
    </tbody>
</table>