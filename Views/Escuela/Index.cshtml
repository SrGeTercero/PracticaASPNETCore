@model Escuela

@{
    ViewData["Title"] = "Información Escuela";
    Layout = "_Simple";
}

<h1>Escuela: @ViewData["Title"]</h1>
<h2>Nombre: @Model.Nombre</h2>
<h3>Tipo de Escuela: @Model.TipoEscuela</h3>
<address>
    <p>Dirección: @Model.Direccion</p>
    <p>País: @Model.Pais</p>
    <p>Ciudad: @Model.Ciudad</p>
</address>
<p><strong>Año Fundación: @Model.AñoCreacion</strong></p>

<p><strong>@ViewBag.cosaDinamica</strong></p>
<p><strong>@ViewData["cosaDinamica"]</strong></p>