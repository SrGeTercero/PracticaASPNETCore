@model Curso


@{
    ViewData["Title"] = "Eliminar Curso";
    Layout = "_Simple";
}

<h1>@ViewData["Title"]</h1>
<h2>@ViewBag.IdCursoAEliminar</h2>

<div asp-validation-summary="All"></div>
<form method="POST">
    <div>
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" disabled/>
    </div>  
    <div>
        <label asp-for="Direccion"></label>
        <input asp-for="Direccion" disabled/>
    </div>
    <div>
        <label asp-for="Jornada"></label>
        <!--<input asp-for="Jornada"/>-->
        @Html.DropDownList(
            "Jornada",
            Html.GetEnumSelectList<TiposJornada>(),
            "Seleccione una jornada",
            new { @class = "form-control" }
        )
    </div>
    <input type="submit" value="Confirmar"/>
</form>


<p><strong>@ViewData["fecha"]</strong></p>